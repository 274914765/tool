#!/bin/sh

regex=".*\.c$\|.*\.cc$\|.*\.c\+\+$\|.*\.cc$\|.*\.cpp$\|.*\.cxx$\|.*\.m$\|.*\.M$\|.*\.mm$\|.*\.h$\|.*\.hh$\|.*\.h\+\+$\|.*\.hm$\|.*\.hpp$\|.*\.hxx$\|.*\.txx$"
regex_clean=".*\.c\~$\|.*\.cc\~$\|.*\.c\+\+\~$\|.*\.cc\~$\|.*\.cpp\~$\|.*\.cxx\~$\|.*\.m\~$\|.*\.M\~$\|.*\.mm\~$\|.*\.h\~$\|.*\.hh\~$\|.*\.h\+\+\~$\|.*\.hm\~$\|.*\.hpp\~$\|.*\.hxx\~$\|.*\.txx\~$"

find . -iregex $regex -exec enca -L zh_CN -x UTF-8 '{}' \;

